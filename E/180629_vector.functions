  function pdfSetStroke() {

  PDFSRC="$1"
  STROKEWEIGHT="$2"

  inkscape --export-plain-svg=${TMPNOW}.svg $PDFSRC
  sed -i "s/stroke-width:[0-9.]*/stroke-width:$STROKEWEIGHT/g" ${TMPNOW}.svg
  inkscape --export-pdf=$PDFSRC ${TMPNOW}.svg
  rm ${TMPNOW}.svg  

  }
