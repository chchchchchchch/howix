  function px2in() {

    # https://unix.stackexchange.com/questions/40786/
    # -> how-to-do-integer-float-calculations-in-bash-or-other-languages-frameworks
     PX="$1"
     PT=`python -c "print ${PX}/1.25"`
     IN=`python -c "print ${PT}*0.0138889"`
     echo $IN

  }

  function pt2in() {

     PT="$1"
     IN=`python -c "print ${PT}*0.0138889"`
     echo $IN

  }
