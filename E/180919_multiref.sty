\newcommand{\showrefs}[1]{%
 \IfFileExists{\jobname.mlabel#1.aux}{%
  \nobreak\hspace{.5em plus .5em minus .2em}%
 (\nobreak\hspace{.1em}{\small See~p.~%
  \nobreak\hspace{-.8em}\mref{#1}}
  \nobreak\hspace{-0.5em plus 0em minus 0em})
 }{} % IF AUX FILE DOES NOT EXIST -> DO NOTHING
 }

