 % https://tex.stackexchange.com/questions/33832/
 % -> special-handling-of-first-and-or-last-item-in-an-etoolbox-list

  \newcommand{\commalist}[1]{%
              \def\process{\def\process{, }}%
              \def\do##1{\process##1}%
              \dolistloop{#1}}
  \newcommand{\commalistnobreak}[1]{%
              \def\process{\def\process{,~}}%
              \def\do##1{\process##1}%
              \dolistloop{#1}}
 
