% MAKE PAGE AMOUNT DIVIDABLE BY FOUR
% --------------------------------------------------------------------------- %
% https://groups.google.com/forum/#!topic/de.comp.text.tex/j8wWMv8lZaM
  \newcount\vs
  \newcount\vsi
  \newcommand\cleartofour{
   \mbox{}\clearpage
   \pagestyle{empty}
   \vs\thepage
   \advance\vs by 3
   \vsi\vs
   \divide\vs by 4
   \multiply\vs by 4
   \ifnum\vs=\vsi\else\cleartofour\fi
  }
% --------------------------------------------------------------------------- %

% MAKE PAGE AMOUNT DIVIDABLE BY FOUR (-2 FOR BACK COVER) <= BOOKLET
% --------------------------------------------------------------------------- %
  \newcount\vs
  \newcount\vsi
  \newcommand\clearforend{
    \mbox{}\clearpage
    \pagestyle{empty}
    \vs\thepage
    \advance\vs by 3
    \vsi\vs
    \divide\vs by 4
    \multiply\vs by 4
    \ifnum\vs=\vsi\else\clearforend\fi
  }
