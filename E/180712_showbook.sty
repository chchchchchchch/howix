  \newcommand\offpagetxt[1]{
  \begin{minipage}{10\paperwidth} % MAKE IT HUGE
  {\vspace{-4\paperheight} % MOVE IT OUT
   \tiny #1} % MAKE IT TINY
  \end{minipage}}
% ====================================================== %
% ----
  \newcounter{c}\newcounter{n}
% --
  \newcommand{\pagestep}[1]{
   \setcounter{c}{\value{page}}
   \ifnum\value{c}>\value{n}
         #1
   \else #1 \pagestep{#1}
   \fi
  }
