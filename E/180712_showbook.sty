  \newcount\vs\newcount\vsi
  \newcounter{first}\newcounter{last}
  % ----
   \newcommand{\showbookpages}[5]{
    \newpage\vs\thepage
    \setcounter{n}{\value{page}}
    \addtocounter{n}{#3}
    \addtocounter{n}{-1}
    \setcounter{first}{#2}

  % CHECK IF FIRST PAGE IS ODD
  % ----
    \vs\value{first}
